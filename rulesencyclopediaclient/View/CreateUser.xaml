        <Button x:Name="btnCreateUser" Content="Create User" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="308,202,0,0" VerticalAlignment="Top" Width="75" Click="btnCreateUser_ClickAsync" TabIndex="6">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
        <PasswordBox x:Name="pswBoxPassword" HorizontalAlignment="Left" Height="23" Margin="157,133,0,0" VerticalAlignment="Top" Width="226" TabIndex="4" GotFocus="txtBoxGotFocus" LostFocus="txtBoxLostFocus"/>
        <PasswordBox x:Name="pswBoxConfirmPassworm" HorizontalAlignment="Left" Height="23" Margin="157,157,0,0" VerticalAlignment="Top" Width="226" TabIndex="5" GotFocus="txtBoxGotFocus" LostFocus="txtBoxLostFocus"/>

    </Grid>
</Page>
