<Page x:Class="rulesencyclopediaclient.View.CreateUser"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:rulesencyclopediaclient.View"
      mc:Ignorable="d"
      Title="CreateUser" Height="249.2" Width="422.4" ScrollViewer.VerticalScrollBarVisibility="Disabled" Background="White">

    <Grid>
        <Label x:Name="labelFirstName" Content="First name" HorizontalAlignment="Left" Margin="42,34,0,0" VerticalAlignment="Top" Height="24" Width="110"/>
        <Label x:Name="labelMiddleName" Content="Middle name" HorizontalAlignment="Left" Margin="42,58,0,0" VerticalAlignment="Top" Height="24" Width="110"/>
        <Label x:Name="labelLastName" Content="Last name" HorizontalAlignment="Left" Margin="42,82,0,0" VerticalAlignment="Top" Height="24" Width="110"/>
        <Label x:Name="labelUserName" Content="User name" HorizontalAlignment="Left" Margin="42,106,0,0" VerticalAlignment="Top" Height="24" Width="110"/>
        <Label x:Name="labelPassword" Content="Password" HorizontalAlignment="Left" Margin="42,130,0,0" VerticalAlignment="Top" Height="24" Width="110"/>
        <Label x:Name="labelConfirmPassword" Content="Confirm password" HorizontalAlignment="Left" Margin="42,154,0,0" VerticalAlignment="Top" Height="24" Width="110"/>
        <TextBox x:Name="txtBoxFirstName" HorizontalAlignment="Left" Height="23" Margin="157,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" TabIndex="0" GotFocus="txtBoxGotFocus" LostFocus="txtBoxLostFocus"/>
        <TextBox x:Name="txtBoxMiddleName" HorizontalAlignment="Left" Height="23" Margin="157,61,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="226" TabIndex="1" GotFocus="txtBoxGotFocus" LostFocus="txtBoxLostFocus"/>
